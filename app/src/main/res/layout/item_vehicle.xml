<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/bg_curved_transparent_stroke_gray"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp">

        <com.mytaxi.task.customviews.CTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:minWidth="@dimen/_60sdp"
            android:text="@string/fleet_type"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            custom:textStyleFont="bold" />

        <com.mytaxi.task.customviews.CTextView
            android:id="@+id/tv_fleet_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_content"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/_10sdp"
            custom:textStyleFont="regular" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorTextGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp">

        <com.mytaxi.task.customviews.CTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:minWidth="@dimen/_60sdp"
            android:text="@string/heading"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            custom:textStyleFont="bold" />

        <com.mytaxi.task.customviews.CTextView
            android:id="@+id/tv_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_content"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/_10sdp"
            custom:textStyleFont="regular" />

    </LinearLayout>
</LinearLayout>